# Easier navigation: .., ..., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# list stuff
alias ll='ls -la'

# Shortcuts
alias d="cd ~/Documents/Dropbox"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/projects"
alias p7="cd ~/development/p7s7"
alias cz="cd ~/development/codeofzen"
alias g="git"
alias h="history"
alias j="jobs"

# prefix common ruby-gems with bundle
alias middleman='bundle exec middleman'
alias rake='bundle exec rake'
alias rspec='bundle exec rspec'